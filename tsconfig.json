{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "lib": [
            "DOM",
            "ES7",
            "ES2017",
            "ES2018",
            "ES2019"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "rootDir": "./src",
        "outDir": "./dist/js",
        "jsx": "react",
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [ "node_modules" ]
}